<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/view_one"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/top_search"
        android:layout_width="420dp"
        android:layout_height="60dp"
        android:visibility="visible"
        android:background="@drawable/top" />

    <ScrollView
        android:id="@+id/scrollx"
        android:layout_width="match_parent"
        android:layout_height="831dp"
        android:scrollbars="none">
        <!-- ScorllView解决上下滑动-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_marginStart="40dp"
                android:background="@drawable/find_movie" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="-50dp"
                android:background="@drawable/douban_top" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="-50dp"
                android:background="@drawable/douban_guess" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="320dp"
                android:layout_marginTop="-50dp"
                android:background="@drawable/douban_film_list"
                tools:layout_editor_absoluteX="234dp"
                tools:layout_editor_absoluteY="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="找电影"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:layout_marginTop="-27dp"
                android:text="豆瓣榜单"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="230dp"
                android:layout_marginTop="-27dp"
                android:text="豆瓣猜"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="315dp"
                android:layout_marginTop="-27dp"
                android:text="豆瓣片单"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/introduction" />


            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:text="影院热映"
                android:textColor="#000000"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="-30dp"
                android:text="即将上映"
                android:textColor="#9D9D9D"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/img_cursor"
                android:layout_width="85dp"
                android:layout_height="4dp"
                android:layout_marginStart="20dp"
                android:background="#000000"
                android:scaleType="matrix" />

            <TextView
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="-30dp"
                android:backgroundTint="#fff"
                android:text="全部20>"
                android:layout_marginRight="15dp"
                android:textColor="#000000" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpager"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="22dp"
                android:flipInterval="30"
                android:persistentDrawingCache="animation">

            </androidx.viewpager.widget.ViewPager>
            <Button
                android:id="@+id/zhuan"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_marginTop="-550dp"
                android:layout_height="550dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/introduction2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="豆瓣榜单"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="为你推荐"
                android:layout_marginStart="5dp"
                android:textColor="#000000"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="350dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/movie_poster" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_viewa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"/>
        </LinearLayout>
    </ScrollView>
